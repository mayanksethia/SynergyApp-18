<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/info_text0"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="40dp"
            android:text="Itinerary"
            android:textColor="#0000ff"
            android:textAlignment="center"
            />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="10dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40dp"
                android:text="Day 1"
                android:textColor="#ff0000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23rd February ‘18\n
8:30AM-10AM: Inauguration\n
10AM-6PM: Machine Learning Workshop\n
10AM-6PM: VLSI Design Workshop\n\n
10AM-6PM: Voice Controlled Robotics\n\n
10AM-6PM: Paper Presentation (CS/IT)\n\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="70dp"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="10dp">

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40dp"
                android:text="Day 2"
                android:textColor="#ff0000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/info_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24th February ‘18\n
9AM-6PM: Machine Learning Workshop\n
9AM-6PM: VLSI Design Workshop\n
9AM-6PM: Voice Controlled Robotics Workshop\n
8AM-8PM: Code-Olympia\n
10AM-6PM: Paper Presentation (ECE/EEE/EIE)\n
10AM-6PM: Project Presentation\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="70dp"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="10dp">

            <TextView
                android:id="@+id/info_text4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40dp"
                android:text="Day 3"
                android:textColor="#ff0000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/info_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25th February ‘18\n
9AM-11AM: Seminar/ Guest Lecture
2PM-5PM: Web Development Workshop\n
6PM-9PM: Cultural Night\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="70dp"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>




    </LinearLayout>
</ScrollView>