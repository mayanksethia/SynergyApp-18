<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="10dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:textSize="35dp"
                android:text="Android App Development Workshop"
                android:textColor="#0000ff"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A major share of hand-held devices runs on the Android Operating System - which is open source and customizable. The Android Application Development Workshop provides participants technical training on the concepts and programming methodologies needed to develop applications for mobile devices. Participants will learn to use different android libraries. Instruction is aided with live projects which will allow students to grasp concepts of the complete mobile application development life-cycle."
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="150dp"
                android:textSize="15dp" />

        </android.support.v7.widget.CardView>




        <TextView
            android:id="@+id/info_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATES OF THE WORKSHOP\n
25th February, 2018"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/info_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION FEE\n
            200 Rs / participant
"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/info_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT FOR FURTHER DETAILS\n
Rahul : +91-9852657338
"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:textSize="15dp" />




        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/website"
            android:text="REGISTER"
            android:textColor="#ff0000"
            >

        </Button>


    </LinearLayout>
</ScrollView>