<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="10dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40dp"
                android:text="VLSI Workshop"
                android:textColor="#0000ff"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vlsi_info"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="60dp"
                android:textSize="15dp" />

        </android.support.v7.widget.CardView>




        <TextView
            android:id="@+id/info_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATES OF THE WORKSHOP\n
23rd and 24th February, 2018"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/info_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION FEE\n
Non-IETE member – Rs.1000 / participant\n
IETE member– Rs.800 /participant

"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/info_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT FOR FURTHER DETAILS\n
Gaurav : +91-9051081001
"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:textSize="15dp" />




        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/website"
            android:text="REGISTER"
            android:textColor="#ff0000"
            >

        </Button>


    </LinearLayout>
</ScrollView>